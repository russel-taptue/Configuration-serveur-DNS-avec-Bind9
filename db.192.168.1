;
; BIND reverse data file for local loopback interface
;
$TTL	604800
@	IN	SOA	srv-dns.lion-security.local. admin.lion-security.local. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
@	IN	NS	srv-dns.lion-security.local.

1	IN	PTR	srv-dns.lion-security.local.
1       IN      PTR     srv-dhcp.lion-security.local.
100     IN      PTR     kali.lion-security.local.
